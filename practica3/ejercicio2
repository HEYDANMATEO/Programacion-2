import java.util.Random; import java.util.Scanner; 
 
public class Juego {     protected int numeroDeVidas;     protected int record;     protected int vidasIniciales; 
     
    public Juego() {         this.numeroDeVidas = 0;         this.record = 0;         this.vidasIniciales = 0; 
    } 
     
    public void reiniciaPartida() {         this.numeroDeVidas = this.vidasIniciales; 
        System.out.println("Partida reiniciada. Vidas: " + this.numeroDeVidas); 
    } 
     
    public void actualizaRecord() {         if (this.numeroDeVidas > this.record) {             this.record = this.numeroDeVidas; 
            System.out.println("¡Nuevo récord! " + this.record + " vidas restantes."); 
        } else { 
            System.out.println("Récord actual: " + this.record + " vidas."); 
        } 
    } 
     
    public boolean quitaVida() {         this.numeroDeVidas--;         if (this.numeroDeVidas > 0) { 
            System.out.println("Te quedan " + this.numeroDeVidas + " vidas."); 
            return true; 
        } else { 
            System.out.println("¡Game Over! No te quedan vidas."); 
            return false; 
        } 
    } 
} 
import java.util.Random; import java.util.Scanner; 
 
public class JuegoAdivinaNumero extends Juego {     protected int numeroAAdivinar;     protected Random random;     protected Scanner scanner; 
     
    public JuegoAdivinaNumero(int vidas) { 
        super();         this.vidasIniciales = vidas;         this.numeroDeVidas = vidas;         this.random = new Random();         this.scanner = new Scanner(System.in);         this.numeroAAdivinar = 0; 
    } 
     
    public boolean validaNumero(int num) {         return num >= 0 && num <= 10; 
    } 
     
 
    public void juega() {         this.reiniciaPartida(); 
        this.numeroAAdivinar = random.nextInt(11); 
        System.out.println("=== JUEGO ADIVINA EL NÚMERO ==="); 
        System.out.println("Adivina un número entre 0 y 10"); 
         
        while (this.numeroDeVidas > 0) { 
            try { 
                System.out.print("Ingresa tu número: ");                 int numeroUsuario = scanner.nextInt(); 
                 
                if (!validaNumero(numeroUsuario)) { 
                    System.out.println("Error: El número debe estar entre 0 y 10. Intenta nuevamente."); 
                    continue; 
                } 
                 
                if (numeroUsuario == this.numeroAAdivinar) {                     System.out.println("¡Acertaste!");                     this.actualizaRecord(); 
                    return; 
                } else { 
                    System.out.println("Fallaste.");                     if (!this.quitaVida()) {                         return; 
                    } 
                     
                    if (numeroUsuario < this.numeroAAdivinar) { 
                        System.out.println("Pista: El número a adivinar es MAYOR"); 
                    } else { 
                        System.out.println("Pista: El número a adivinar es MENOR"); 
                    } 
                } 
            } catch (Exception e) { 
                System.out.println("Error: Ingresa un número válido."); 
                scanner.next(); 
            } 
        } 
    } 
} 
public class JuegoAdivinaPar extends JuegoAdivinaNumero { 
     
    public JuegoAdivinaPar(int vidas) { 
        super(vidas);  
    } 
     
    @Override     public boolean validaNumero(int num) {         if (!super.validaNumero(num)) { 
            return false; 
        } 
         
        if (num % 2 == 0) { 
            return true; 
        } else { 
            System.out.println("Error: Debes ingresar un número PAR."); 
            return false; 
        } 
    } 
} 
public class JuegoAdivinaImpar extends JuegoAdivinaNumero { 
     
    public JuegoAdivinaImpar(int vidas) {         super(vidas);  
    } 
     
    @Override     public boolean validaNumero(int num) {         if (!super.validaNumero(num)) { 
            return false; 
        } 
         
        if (num % 2 == 1) {             return true; 
        } else { 
            System.out.println("Error: Debes ingresar un número IMPAR."); 
            return false; 
        } 
    } 
} 
public class AplicacionEjercicio2 {     public static void main(String[] args) { 
        System.out.println(" EJERCICIO 2 - TRES JUEGOS DIFERENTES"); 
        System.out.println("========================================"); 
         
        System.out.println("\n Juego Adivina Número Normal ");         JuegoAdivinaNumero juegoNormal = new JuegoAdivinaNumero(3); 
        juegoNormal.juega(); 
         
        System.out.println("\n  Juego Adivina Número Par ");         JuegoAdivinaPar juegoPar = new JuegoAdivinaPar(3); 
        juegoPar.juega(); 
         
        System.out.println("\n Juego Adivina Número Impar  ");         JuegoAdivinaImpar juegoImpar = new JuegoAdivinaImpar(3);         juegoImpar.juega(); 
         
        System.out.println("\n ¡Todos los juegos completados!"); 
    } 
 
